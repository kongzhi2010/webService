#set($layout="/common/layout_empty.vm")
<link href="/static/css/login.css" rel="stylesheet">
<div class="container">

	<input type="hidden" id="toUrl" name="toUrl" value="$!toUrl" />
	<form class="form-signin" role="form" action="">
		<h2 class="form-signin-heading">请先登陆</h2>
		<input id="username" type="text" class="form-control"
			placeholder="请输入您的用户名" autofocus> <br> <input
			id="password" type="password" class="form-control"
			placeholder="请输入您的密码" required>
		<button class="btn btn-lg btn-primary btn-block" type="submit"
			onclick="login()">登陆</button>
	</form>
</div>
<!-- /container -->
<script src="/static/js/login.js"></script>